<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center"
        android:textColor="@color/write"
        android:id="@+id/classname_tv"
        android:background="@drawable/btn_login_backg"
        android:gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/sign_time"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/sign_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@id/text1"
                    android:text=""
                    android:layout_marginLeft="12dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/late_time"
                    android:layout_marginLeft="12dp"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radio_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_backg"
                        android:drawablePadding="6dp"
                        android:paddingLeft="12dp"
                        android:textColor="@color/pijia_result"
                        android:text="5分钟"/>
                    <RadioButton
                        android:id="@+id/radio_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_backg"
                        android:drawablePadding="6dp"
                        android:paddingLeft="12dp"
                        android:textColor="@color/pijia_result"
                        android:text="3分钟"/>
                    <RadioButton
                        android:id="@+id/radio_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_backg"
                        android:drawablePadding="6dp"
                        android:paddingLeft="12dp"
                        android:textColor="@color/pijia_result"
                        android:text="1分钟"/>
                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/sign_code"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/sign_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@id/text3"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@color/title_bg"
                    android:layout_marginLeft="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/sign_adds"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/sign_adds_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@id/text"
                    android:text=""
                    android:singleLine="true"
                    android:layout_marginLeft="12dp"/>
            </RelativeLayout>
            <com.amap.api.maps2d.MapView
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="240dp"/>
            <Button
                android:id="@+id/sign_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="24dp"
                android:background="@drawable/btn_start_sign"
                android:textColor="@color/write"
                android:text="@string/sign"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>