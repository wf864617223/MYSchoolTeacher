<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="我"
        android:textColor="@color/write"
        android:background="@color/title_bg"
        android:textSize="18sp"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/userinfo_layout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="@mipmap/userinfo_bg"
        android:gravity="center_horizontal">
        <com.rimi.schoolteacher.widget.CircleImageView
            android:id="@+id/head_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/boy"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:padding="6dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/head_img"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:text="王晓雪"/>
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="辅导员"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/change_password_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/change_password"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="10dp"
            android:layout_marginLeft="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <RelativeLayout
        android:id="@+id/about_our_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/about_our"
            android:drawableLeft="@mipmap/about"
            android:drawablePadding="10dp"
            android:layout_marginLeft="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <Button
        android:id="@+id/exit_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/write"
        android:background="@drawable/btn_signout_backg"
        android:text="@string/exit"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"/>
</LinearLayout>